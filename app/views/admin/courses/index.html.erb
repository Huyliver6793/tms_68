<section id="service" class = "admin-section">
  <div class="container">
    <div class="row">
      <%= render "admin/shared/title_header" %>
      <div class="responsive-table">
        <table id="table_list"
          class="table table-striped table-bordered width-100" cellspacing="0">
          <thead>
            <tr>
              <th class = "text-center"><%= t ".course_name" %></th>
              <th class = "text-center"><%= t ".start_date" %></th>
              <th class = "text-center"><%= t ".end_date" %></th>
              <th class = "text-center"><%= t ".status" %></th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td class = "text-center"><%= link_to course.name, "#" %></td>
                <td class = "text-center">
                  <%= l course.start_date, format: :default %>
                </td>
                <td class = "text-center">
                  <%= l course.end_date, format: :default %>
                </td>
                <td class = "text-center">
                  <span class="label label-outline label-<%= show_status course %>">
                    <%= course.status %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
