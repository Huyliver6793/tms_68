<div class="col-md-12 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <h3><%= t "course.title_subject" %></h3>
      </div>
      <div class="panel-body">
        <div class="col-md-4">
          <ul class="timeline timeline-custom">
            <li class="timeline-inverted">
              <div class="timeline-panel">
                <div class="timeline-heading">
                  <h4 class="timeline-title"><%= t "subject.member" %>
                    <span class="badge"><%= course.users.size %></span></a>
                  </h4>
                  <div class="timeline-body">
                    <% @trainer_in_course.each do |trainer| %>
                      <p>
                        <%= trainer.name %>
                      </p>
                      <%= paginate @trainer_in_course %>
                    <% end %>
                  </div>
                </div>
              </div>
            </li>
          </ul>
          <ul class="timeline timeline-custom">
            <li class="timeline-inverted">
              <div class="timeline-panel">
                <div class="timeline-heading">
                  <h4 class="timeline-title"> </h4>
                  <p>
                    <small class="text-muted">
                      <i class="glyphicon glyphicon-time"></i>
                    </small>
                  </p>
                  <div class="timeline-body">
                    <p></p>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div>
        <div class="col-md-8">
          <% subjects.each do |subject| %>
            <ul class="timeline">
              <li class="timeline-inverted">
                <div class="timeline-badge warning">
                  <i class="glyphicon glyphicon-credit-card"></i>
                </div>
                <div class="timeline-panel">
                  <div class="timeline-heading">
                    <h4 class="timeline-title"><%= link_to subject.name, "#" %>
                    </h4>
                    <p>
                      <small class="text-muted">
                        <i class="glyphicon glyphicon-time"></i><%= t "member.date" %>
                      </small>
                    </p>
                    <div class="timeline-body">
                      <p><%= subject.description %>.</p>
                    </div>
                  </div>
                </div>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
